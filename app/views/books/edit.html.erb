<h1>Editing Book</h1>

<%= form_with model: @book_find do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :opinion %><br>
    <%= f.text_area :opinion %>
  </div>
  <div>
    <%= f.submit "Updare Book" %>
  </div>
<% end %>

<%= link_to "Show", book_path(@book_find.id) %> |
<%= link_to "Back", '/books' %>