<h1>Editing Book</h1>

<div class="container">
  <div id="error_explanation">
    <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this obj from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>

<%= form_with model: @book do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :opinion %><br>
    <%= f.text_area :opinion %>
  </div>
  <div>
    <%= f.submit "Updare Book" %>
  </div>
<% end %>

<%= link_to "Show", book_path(@book.id) %> |
<%= link_to "Back", '/books' %>