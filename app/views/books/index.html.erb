<!--左-->
<div>
  <h2>User info</h2>
  <!--プロフ画像-->
  <!--名前-->
  <p>name</p>
  <!--自己紹介-->
  <p>introduction</p>
  <%= link_to "edit", edit_user_path(current_user.id) %>


  <h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <div>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :opinion %><br>
      <%= f.text_area :opinion %>
    </div>
    <div>
      <%= f.submit "Create Book" %>
    </div>
  <% end %>
</div>

<!--右-->
<div>
  <h2>Books</h2>

  <!--投稿一覧-->
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= image_tag book.user.get_profile_image(100,100) %>
        </td>
        <td><%= link_to book.title, "book_path(book.id)" %></td>
        <td><%= book.opinion %></td>
      </tr>

    </tbody>
    <% end %>
</table>

</div>