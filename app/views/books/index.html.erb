<!--左-->
<%= render 'user_info', user: @user %>
<%= render 'create_book', book: @book %>

<!--右-->
<div>
  <h2>Books</h2>

  <!--投稿一覧-->
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user.id) do %>
            <%= image_tag book.user.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td><%= link_to book.title, "book_path(book.id)" %></td>
        <td><%= book.opinion %></td>
      </tr>
    </tbody>
    <% end %>
</table>

</div>